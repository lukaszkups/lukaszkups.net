extends layout.pug

block content
  .main-container
    .notes-list-wrapper
      #notes-list.notes-list
        ul.notes
          each item, index in list.length ? list : ['No entries yet.']
            - const parsedDate = item.meta.date.split('/').map(obj => parseInt(obj)).join('-')
            if !item.meta.hidden
              li(data-date=parsedDate, data-category=item.meta.category, data-tags=item.meta.tags)
                a(href=item.url) <span>#{item.meta.date}</span> - #{item.meta.title}
  .main-container
    if paginationLinks && paginationLinks.length
      ul#pagination.pagination
        each item, index in paginationLinks
          li
            - pageNumber = index + 1
            - paginationClass = pageNumber === currentPage ? 'current-page' : ''
            a(href=item, class=paginationClass) #{pageNumber}
